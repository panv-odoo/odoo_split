<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="action_expense" model="ir.actions.act_window">
        <field name="name">Expenses</field>
        <field name="res_model">expense.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="expense_view_tree" model="ir.ui.view">
        <field name="name">expense.view.tree</field>
        <field name="model">expense.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="expense_view_form" model="ir.ui.view">
        <field name="name">expense.view.form</field>
        <field name="model">expense.model</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <field name="amount" />
                        <field name="description" />
                        <field name="types_ids" />
                        <field name="paid_user_ids" />
                        <field name="involve_users_ids" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <page string="Records" >
                            <group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
