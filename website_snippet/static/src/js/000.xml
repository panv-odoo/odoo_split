<templates>
  <t t-name="s_sales_order_snippet">
      <!-- Loop through each sale order and display its details -->
      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Sr no.</th>
            <th scope="col">Order Number</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody >
          <t t-foreach="orders" t-as="order" t-key="order.id">
            <tr>
              <td><t t-esc="order.id"/></td>
              <td><t t-esc="order.name"/></td>
              <td><t t-esc="order.partnerName"/></td>
              <td><t t-esc="order.status"/></td>
            </tr>
          </t>
          <!-- Add more rows dynamically -->
        </tbody>
      </table>
  </t>
</templates>