<templates>
  <t t-name="s_sales_order_snippet">
      <!-- Loop through each sale order and display its details -->
      <table t-if="orders" class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Sr no.</th>
            <th scope="col">Order Number</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody >
          <t t-foreach="orders" t-as="order" t-key="order_index">
            <tr>
              <td><t t-esc="order_index+1"/></td>
              <td><t t-esc="order.name"/></td>
              <td><t t-esc="order.partner_id[1]"/></td>
              <td><t t-esc="order.state"/></td>
            </tr>
          </t>
        </tbody>
      </table>
  </t>
</templates>
