<odoo>
    <record id='expense_action_group' model='ir.actions.act_window'>
        <field name='name'>Group</field>
        <field name='res_model'>expense.group</field>
        <field name='view_mode'>tree,form</field>
    </record>
    <record id='expense_group_view_form' model='ir.ui.view'>
        <field name='name'>expense.group.form</field>
        <field name='model'>expense.group</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <field name='name'/>
                        <field name='member_ids' widget='many2many_tags'/>
                    </group>
                    <notebook>
                        <page string="Transaction">
                            <field name='group_transaction_ids'/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id='expense_group_view_tree' model='ir.ui.view'>
        <field name='name'>expense.group.tree</field>
        <field name='model'>expense.group</field>
        <field name='arch' type='xml'>
            <tree>
                <field name='name'/>
                <field name='member_ids'/>
            </tree>
        </field>
    </record>
</odoo>
